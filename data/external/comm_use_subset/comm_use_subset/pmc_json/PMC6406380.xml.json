    "metadata": {
        "title": "Spatio-Temporal Analysis of Infectious Diseases",
        "authors": [
            {
                "first": "Antonio",
                "middle": [],
                "last": "L\u00f3pez-Qu\u00edlez",
                "suffix": "",
                "email": null,
                "affiliation": {}
